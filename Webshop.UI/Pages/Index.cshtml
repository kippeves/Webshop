@page
@model Webshop.UI.Pages.IndexModel
@if (default != Model.SessionInfo_Customer) {
    @await Html.PartialAsync("_UserMenu")
}
<div class="d-flex flex-fill flex-wrap w-75 m-auto align-content-center">
    @foreach (var product in Model.products)
    {
        <div class="card m-1" style="min-width:16rem; max-width:16rem">
            <img src="@product.Image" class="card-img-top p-4" alt="...">
            <div class="card-body">
                <h5 class="card-title">@product.Name</h5>
                <p class="card-text">@product.Desc</p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">@product.Price.ToString("N") kr</li>
            </ul>
            @if (default != Model.SessionInfo_Customer)
            {
                <div class="card-footer">
                    <a asp-page="/User/Cart" asp-route-id="@product.Id" asp-page-handler="Add" class="btn btn-primary">Lägg till i varukorg</a>
                </div>
            }
        </div>
    }
</div>