@page "{handler?}/{id?}"
@model Webshop.UI.Pages.Cart.IndexModel
@{
}
<h1>Produkter i varukorg:</h1>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Namn</th>
            <th scope="col">Antal</th>
            <th scope="col">á Pris</th>
            <th scope="col">Total</th>
        </tr>
    </thead>
    <tbody>
        @{double total = 0;}
    @for (int i = 0; i < Model.Products.Count; i++)
        {
            total += (Model.Products.ToArray()[i].Key.Price * Model.Products.ToArray()[i].Value);
            <tr>
                <th scope="row">@(i+1)</th>
                <td>@Model.Products.ToArray()[i].Key.Name</td>
                <td>@Model.Products.ToArray()[i].Value</td>
                <td>@Model.Products.ToArray()[i].Key.Price</td>
                <td>@String.Format("{0:n}", (Model.Products.ToArray()[i].Key.Price * Model.Products.ToArray()[i].Value)) kr</td>
            </tr>
        }
        <tfoot>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td>Total Kostnad: </td>
                <td>@total kr</td>
            </tr>
        </tfoot>
    </tbody>
</table>
